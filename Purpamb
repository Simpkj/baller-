-- MLVSHR START FRAMEWORK

-- Place this script in StarterPlayerScripts or another suitable location

local TweenService = game:GetService("TweenService")
local Lighting = game:GetService("Lighting")
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

-- Tween settings for the environment
local tweenInfoEnvironment = TweenInfo.new(5, Enum.EasingStyle.Linear, Enum.EasingDirection.InOut)

-- Goal settings for resetting the environment to normal
local goalEnvironmentNormal = {
    Ambient = Color3.fromRGB(127, 127, 127), -- Default ambient color
    OutdoorAmbient = Color3.fromRGB(127, 127, 127), -- Default outdoor ambient color
    Brightness = 2, -- Default brightness
    ClockTime = 12, -- Default time (noon)
    ExposureCompensation = 0 -- Default exposure
}
local tweenEnvironmentNormal = TweenService:Create(Lighting, tweenInfoEnvironment, goalEnvironmentNormal)

-- Function to apply tween to reset the environment
local function applyEnvironmentResetTween()
    tweenEnvironmentNormal:Play()
end

-- Apply tweens to reset environment
applyEnvironmentResetTween()

